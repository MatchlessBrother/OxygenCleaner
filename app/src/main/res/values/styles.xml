<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="editTextColor">@color/colorBlack</item>
    </style>

    <style name="LightStatusTheme" parent="AppTheme" />

    <style name="GreenTheme" parent="AppTheme">
        <item name="colorAccent">#00BA1F</item>
    </style>

    <style name="NoStateBarStyle" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
